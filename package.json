  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:mongo": "docker compose up -d mongodb",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "dev:setup": "npm run docker:mongo && npm run wait-for-mongo && echo 'âœ… Development environment ready!'",
    "wait-for-mongo": "npx wait-on tcp:localhost:27017 -t 30000",
    "dev:backend": "npx nx serve backend",
    "dev:frontend": "npx nx serve frontend",
    "dev": "npm run dev:setup && npx nx run-many -t serve --projects=backend,frontend --parallel",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test"
  },
